{
  "name": "@imjamesbarrett/agent-rules",
  "version": "0.1.0",
  "description": "TypeScript CLI to generate markdown rule files from a central rules directory.",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "James Barrett",
    "url": "https://x.com/imjamesbarrett",
    "email": "hello@jamesbarrett.io"
  },
  "keywords": [
    "cli",
    "markdown",
    "generator",
    "rules",
    "agents",
    "docs",
    "typescript",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjamesbarrett/agent-rules.git"
  },
  "bugs": {
    "url": "https://github.com/imjamesbarrett/agent-rules/issues"
  },
  "homepage": "https://github.com/imjamesbarrett/agent-rules#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "agent-rules": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "build": "tsup src/cli.ts --format esm --target node20 --out-dir dist --clean",
    "dev": "tsup src/cli.ts --format esm --target node20 --out-dir dist --clean --watch",
    "start": "node dist/cli.js",
    "rules:generate": "node dist/cli.js generate",
    "examples:generate": "node dist/cli.js generate --config ./examples/agents.config.json",
    "prepack": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint-staged": "lint-staged",
    "lint:md": "markdownlint-cli2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "strip-json-comments": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-yml": "^1.19.0",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.1",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8",
    "yaml-eslint-parser": "^1.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
